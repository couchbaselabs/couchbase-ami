#!/bin/sh

crontab -r

/opt/@@PKG_KIND@@/bin/membase cluster-init -c 127.0.0.1 \
    --cluster-init-username=Administrator \
    --cluster-init-password=`curl http://169.254.169.254/latest/meta-data/instance-id`

sudo /etc/init.d/@@PKG_KIND@@-server stop

sudo mkdir -p /mnt/ebs/db
sudo chown @@PKG_KIND@@:@@PKG_KIND@@ /mnt/ebs/db
sudo mv /opt/@@PKG_KIND@@/var /mnt/ebs/db
sudo ln -s /mnt/ebs/db/var /opt/@@PKG_KIND@@/var
sudo chown -h @@PKG_KIND@@:@@PKG_KIND@@ /opt/@@PKG_KIND@@/var

sudo /etc/init.d/@@PKG_KIND@@-server start

rm -f config-pkg

